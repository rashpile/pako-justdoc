# Build stage
FROM golang:1.25-alpine AS builder
WORKDIR /app
COPY go.mod go.sum* ./
RUN go mod download
COPY . .
RUN CGO_ENABLED=0 GOOS=linux go build -ldflags="-s -w" -o justdoc ./cmd/justdoc

# Runtime stage
FROM scratch
COPY --from=builder /app/justdoc /justdoc
EXPOSE 8080
ENTRYPOINT ["/justdoc"]